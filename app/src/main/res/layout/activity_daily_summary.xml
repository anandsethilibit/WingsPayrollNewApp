<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cyan_50"
    tools:context=".Admin.DailySummaryActivity">

    <ProgressBar
        android:id="@+id/prgruser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cyan_50"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:elevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unit name :-"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginRight="5dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:background="@color/white"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/Unitspinner"
                                android:padding="10dp"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/txtusername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>



                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/selectdateEt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape1"
                    android:focusable="false"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:hint="Select Date"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"/>

                <Button
                    android:id="@+id/btn_GetSummary"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Get Summary"
                    android:backgroundTint="@color/blue_500"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MattendanceRecycler"/>

    </LinearLayout>

</RelativeLayout>
