<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cyan_50"
    tools:context=".Admin.MobileAttendanceActivity">

    <include
        android:id="@+id/toolbarview"
        layout="@layout/toolbar" />
    
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cyan_50"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/selectdateEt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape1"
                    android:focusable="false"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:hint="Select Date"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"/>

                <Button
                    android:id="@+id/btn_MobileAttendance"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Get Mobile Attendance"
                    android:backgroundTint="@color/blue_500"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MattendanceRecycler"/>



